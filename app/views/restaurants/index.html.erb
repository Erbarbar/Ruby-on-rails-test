<h1>Listing all restaurants</h1>
<p>
	<%= link_to "Create new restaurant", new_restaurant_path %>
</p>
<table>
	<tr>
		<th>Name</th>
	</tr>
		<% @restaurants.each do |restaurant| %>
			<tr>
				<td><%= restaurant.name %></td>
				<td><%= link_to 'Show', restaurant_path(restaurant) %></td>
				<td><%= link_to 'Delete', restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure?"} %></td>
			</tr>
	<% end %>
</table>