<p id="notice"><%= notice %></p>

<h1>Listing Discursos</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Descricao</th>
      <th>Duracao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discursos.each do |discurso| %>
      <tr>
        <td><%= discurso.data %></td>
        <td><%= discurso.descricao %></td>
        <td><%= discurso.duracao.strftime("%H:%M:%S") %></td>
        <td><%= link_to 'Show', discurso %></td>
        <td><%= link_to 'Edit', edit_discurso_path(discurso) %></td>
        <td><%= link_to 'Destroy', discurso, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

